<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="papaioannou.aris.professorrating.KessFragment"
    android:background="#ffffffff">


    <TextView
        android:id="@+id/kessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Maroune Kessentini"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp" />

    <ImageView
        android:id="@+id/kessPic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/kessName"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/kess" />

    <TextView
        android:id="@+id/kessInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assistant Professor, Computer and Information Science \n Education: \n PhD, University of Montreal \n Research Areas: \n Software Engineering \n Teaching Areas: \n Computer and Information Science  Software Engineering \n Fun Fact: \n He is on this mobile application"
        android:textSize="10sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <RatingBar
        android:id="@+id/kessRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/kessName"
        android:layout_alignStart="@+id/kessName"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="14dp" />

</RelativeLayout>
